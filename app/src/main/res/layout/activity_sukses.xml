<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".Sukses">

    <ImageView
        android:id="@+id/imgsuces"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/success"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvsukses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgsuces"
        android:text="PENGIRIMAN DATA TELAH SUSKSES SILAHKAN KEMBALI KE MENU UTAMA"
        android:textSize="23dp"
        android:textColor="@color/white"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_sukses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvsukses"
        android:text="MENU UTAMA"
        android:background="@drawable/btn_bg"
        android:textColor="@color/white"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="200dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp" />

</RelativeLayout>